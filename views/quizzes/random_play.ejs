<div class="content">
    <div class="columns">
        <div class="column">
             <h2 class="subtitle is-4">Random Play</h2>
        </div>

        <div class="column is-two-thirds">
            <progress class="progress is-success" value="<%= score %>" max="<%= session.nquizzes %>"></progress>
        </div>
    </div>

    <div class="columns">
        <div class="column is-two-thirds">
            <form method="post" action="/quizzes/randomcheck/<%=quiz.id%>?_method=PUT">
                <ul>
                    <li>
                        <span class="tag is-dark is-medium"><%=quiz.question%></span>
                        <input type="text" placeholder="Answer" class="input is-primary" name="answer" autocomplete="off">
                        <input type="submit" class="button is-success" value="Check">
                        <a href="/goback" class="button is-info">Go Back</a>
                    </li>
                    
                </ul>
            </form>
        </div>
        
        <div class="column">
            <div class="box has-background-info">
                <h3 class="subtitle is-5">Quiz Tips:</h3>

                <% if(session.user){ %>
                    <% include ../tips/new %>
                <% } %>

                <% var tips = quiz.tips; %>
                <% var quizId = quiz.id; %>
                <% var quizAuthorId = quiz.authorId; %>

                 <% include ../tips/index %>

            </div>
        </div> 
    </div>
</div>   