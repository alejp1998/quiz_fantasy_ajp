<h1>    Random Play:
</h1>

<div>    Successful answers = <span id="score"><%= score %></span>
</div>

<form method="get" action="/quizzes/randomcheck/<%= quiz.id %>">
    <p>Question: <b><%= quiz.question %></b></p>
    
    <div class="wideRow">
        <input type="text" class="itemWide" id="answer" name="answer"
               value="" placeholder="Answer" autocomplete="off"/>
        <input type="submit" class="itemNarrow" id="send" value="Check">
    </div>
    
</form>

<h3>Quiz Tips:</h3>

<% if(session.user){ %>
	<% include ../tips/new %>
<% } %>

<% var tips = quiz.tips; %>
<% var quizId = quiz.id; %>
<% var quizAuthorId = quiz.authorId; %>

<% include ../tips/index %>

<a href="/quizzes" class="button">Go Back</a>