<div class="content">
    <h2 class="subtitle is-4">Users</h2>

    <ul class="is-medium">
        <% for (var i in users) { %>
            <li class="is-medium">
                <a href="/users/<%= users[i].id %>" ><%= users[i].username %></a>
                <%= users[i].isAdmin ? "(admin)" : "" %>

            <% if (session.user) { %>
                
                <% if(users[i].id!=session.user.id){%>
                        <a href="/users/<%= users[i].id %>/follow?_method=PUT"class="button is-small">Follow</a>
                        <a href="/users/<%= users[i].id %>/unfollow?_method=DELETE"class="button is-small">Unfollow</a> 
                <% } %>            
                
                <% if (session.user.isAdmin || session.user.id === users[i].id) { %>
                        <a href="/users/<%= users[i].id %>/edit"class="button is-small">Edit</a>
                <%  } %>

                <% if (session.user.isAdmin && session.user.id !== users[i].id) { %>
                        <a href="/users/<%= users[i].id %>?_method=DELETE"
                           onClick="return confirm('Delete user: <%= users[i].username %>');"
                            class="button is-small">Delete</a>
                <% } %>

            <% } %>
            </li>
        <% } %>
    </ul>
    
</div>