<h2 class="subtitle is-4">Edit User:</h2>

<form method="post" action="/users/<%= user.id %>?_method=PUT">
    <ul>
        <span class="tag is-dark is-medium">Username:</span>
        <input type="text" class="input" name="username" autocomplete="off">

        <span class="tag is-dark is-medium">Password:</span>
        <input type="password" class="input" name="password" autocomplete="off">

        <span class="tag is-dark is-medium">Repeat Password:</span>
        <input type="password" class="input" name="password2" autocomplete="off">

        <input type="submit" class="button" value="Edit User">
    </ul>
</form>
