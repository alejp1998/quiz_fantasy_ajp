<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Quiz Fantasy</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet' href='/stylesheets/style.css'/>
    <link rel='stylesheet'
          type='text/css'
          media='only screen and (min-width: 800px) and (min-device-width: 600px)'
          href='/stylesheets/wide.css'/>
    <link rel='stylesheet'
          type='text/css'
          media='only screen and (max-width: 480px)'
          href='/stylesheets/smartphone.css'/>
</head>

<body>
<div id="page">

<header class="main" id="mainHeader">
    <h1>Quiz Fantasy</h1>
</header>

<nav class="main" id="mainNav" role="navigation">
    <a href="/">Home</a>
    <a href="/signin">Sign In</a>
    <a href="/signup">Sign Up</a>
    <a href="/quizzes/randomplay">Play</a>
    <a href="/quizzes">All Quizzes</a>
    <a href="/credits">Credits</a>
</nav>

<section class="main" id="mainSection">
    <% if (messages.info) { %>
        <article id='flashinfo'>
            <h3>Information:</h3>
            <ul>
                <% for (var i in messages.info) { %>
                    <li> <%= messages.info[i] %> </li>
                <% } %>
            </ul>
        </article>
    <% } %>

    <% if (messages.success) { %>
        <article id='flashsuccess'>
            <h3>Tasks completed successfully:</h3>
            <ul>
                <% for (var i in messages.success) { %>
                    <li> <%= messages.success[i] %> </li>
                <% } %>
            </ul>
        </article>
    <% } %>

    <% if (messages.error) { %>
        <article id='flasherror'>
            <h3>Errors:</h3>
            <ul>
                <% for (var i in messages.error) { %>
                    <li> <%= messages.error[i] %> </li>
                <% } %>
            </ul>
        </article>
    <% } %>

    <div>
        <%- body %>
    </div>
</section>

<footer class="main" id="mainFooter">
    <a href="http://en.wikipedia.org/wiki/Quiz">Who doesn't care about what a quiz is?</a>
</footer>

</div>
</body>
</html>
